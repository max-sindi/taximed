    text: 'Оплата услуги происходит в конце поездки, когда санитары полностью выполнили свои обязанности',
    className: 'pay',
  },
 ];

section.section.how
  .wrapper
    .heading
      .heading__title План работы
      .heading__descr Как мы работаем?
    .how__order
      ol.how__order-descr
        li.how__order-title Вы оставляете заявку
      .how__order-form-wrap
        form.order-form(action="#")
          .order-form__inner
            .order-form__input-wrap.order-form__input-text-wrap
              input.order-form__input-text(type="text" name="order-phone" placeholder="Ваш контактный телефон")
            .order-form__input-wrap.order-form__input-button-wrap
              input.order-form__input-button.button--orange(type="submit" name="order-submit" value="Отправить заявку")
    .how__steps
      .how__steps-inner
        ol.how__steps-list(start="2")
          each item in items
            li.how__steps-item.xs-1.md-2.lg-3
              p.how__steps-text(class=`how__steps-text--${item.className}`)=item.text